<%- include("partials/header.ejs") %>
<body>
  <div class="container">
    <h1>Create a New Todo</h1>

    <form action="/todos" method="post" class="todo-form">
      <div class="form-group">
        <label for="task">Task:</label>
        <input type="text" name="task" id="task" required placeholder="Enter your task">
      </div>

      <div class="form-group">
        <label for="priority">Priority:</label>
        <select name="priority" id="priority">
          <option value="" selected>None</option>
          <option value="High">High</option>
          <option value="Medium">Medium</option>
          <option value="Low">Low</option>
        </select>
      </div>

      <div class="form-group">
        <label for="dueDate">Due Date:</label>
        <input type="date" name="dueDate" id="dueDate">
      </div>

      <div class="form-group">
        <label for="description">Description:</label>
        <textarea name="description" id="description" rows="4" placeholder="Add a description..."></textarea>
      </div>

      <button type="submit" class="btn-submit">Create</button>
    </form>

    <p><a href="/" class="back-link">‚Üê Back to Home</a></p>
  </div>
</body>

